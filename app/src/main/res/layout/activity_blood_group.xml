<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BloodGroupActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/blood_group_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/blood_group_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_left" />

        <TextView
            android:id="@+id/blood_group_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/blood_group_back"
            android:layout_toRightOf="@id/blood_group_back"
            android:gravity="center"
            android:text="BLOOD GROUP"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/blood_group_back"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/blood_group_title"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Please select your blood group."
            android:textColor="#757575"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/blood_group_title"
            app:layout_constraintTop_toBottomOf="@+id/blood_group_title" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/blood_group_top_layout"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        app:columnCount="2"
        app:rowCount="4">


        <TextView
            android:id="@+id/tv_a_plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blood_group_item_not_selected"
            android:gravity="center"
            android:padding="20dp"
            android:text="A+"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_a_minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blood_group_item_not_selected"
            android:gravity="center"
            android:padding="20dp"
            android:text="A-"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_b_plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blood_group_item_not_selected"
            android:gravity="center"
            android:padding="20dp"
            android:text="B+"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_b_minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blood_group_item_not_selected"
            android:gravity="center"
            android:padding="20dp"
            android:text="B-"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_ab_plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blood_group_item_not_selected"
            android:gravity="center"
            android:padding="20dp"
            android:text="AB+"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_ab_minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blood_group_item_not_selected"
            android:gravity="center"
            android:padding="20dp"
            android:text="AB-"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_o_plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blood_group_item_not_selected"
            android:gravity="center"
            android:padding="20dp"
            android:text="O+"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_o_minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/blood_group_item_not_selected"
            android:gravity="center"
            android:padding="20dp"
            android:text="O-"
            android:textSize="26sp" />

    </android.support.v7.widget.GridLayout>


</RelativeLayout>
